/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page{
  height: 100%;
  --drawer-color-primary: #3173FA;
  --drawer-color-danger: #FF4500;
  --drawer-color-warning: #ff976a;
  --drawer-color-success: #07c160;
  --drawer-color-info: #909399;
  --nav-bar-icon-color: #333;
  --nav-bar-arrow-size: 40rpx;
  --button-primary-border-color: #3173FA;
  --button-primary-background-color: #3173FA;
  --button-danger-border-color: #FF4500;
  --button-danger-background-color: #FF4500;
  --slider-active-background-color: #0c0d0d;
  --slider-button-height: 18px;
  --slider-bar-height: 3px;
  --slider-button-width: 18px;
}

.van-slider__button{
  border: 2px solid #0c0d0d;
  box-shadow: none;
}

.hover-class{
  opacity: 0.8;
}