/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  position: relative;
  flex: 1;
  overflow-y: hidden;
  padding: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}
.bg-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.title {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 200rpx;
  padding: 20px 0;
  text-align: center;
}
.title-text-info {
  font-size: 24rpx;
  color: #fff;
  text-align: left;
}
.title-text {
  font-size: 100rpx;
  color: #fff;
  font-weight: bold;
  line-height: 1.5;
  text-shadow: 0px 10px 13px rgba(18,21,49,0.44);
}
.button-item {
  margin-bottom: 20rpx;
  display: flex;
  padding: 0 80rpx;
  box-sizing: border-box;
  justify-content: stretch;
  --button-danger-background-color: #FF4500;
}
.button-item .van-button--block {
  width: 280px;
}
.button-item .van-button {
  border-radius: 16rpx;
  flex: 1;
  position: relative;
}
.icon-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}
.footer {
  margin-top: 80rpx;
  text-align: center;
  font-size: 24rpx;
  margin-bottom: 50rpx;
  color: #999;
  position: relative;
  z-index: 1;
}
