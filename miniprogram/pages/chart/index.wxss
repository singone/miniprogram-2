/* pages/chart/index.wxss */
.chart-box{
    width: 100%;
    height: 200px;
}
page{
    height: 100%;
    display: flex;
    flex-direction: column;
}
.content{
    flex: 1;
    height: 0;
    padding-bottom: 100px;
}
.chart-info{
    padding: 10px;
    font-size: 14px;
    background-color: #fff;
    border-radius: 10px;
    margin: 10px;
    border: 1px solid #ccc;
    display: flex;
}
.footer{
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    box-sizing: border-box;
    justify-content: space-between;
    padding: 10px;
    background-color: #fff;
    border-top: 1px solid #efefef;
}
.footer .van-button{
    flex: 1;
    width: auto;
    margin: 0 4px;
    white-space: nowrap;
}
.footer_left{
    display: flex;
    justify-content: flex-start;
    flex: 1;
}
.footer_right{
    display: flex;
    justify-content: flex-end;
    flex: 1;
}
.table-title{
    padding: 10px;
    font-size: 14px;
}
.table-list{
    margin: 10px;
}
.table-list-header{
    display: flex;
    border-bottom: 1px solid #eee;
    border-top: 1px solid #eee;
}
.table-list-item{
    display: flex;
    border-bottom: 1px solid #eee;
}
.table-list-item-title{
    display: flex;
    justify-content: space-between;
    font-size: 14px;
    align-items: center;
    color: #666;
}
.table-list-header-item{
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    color: #333;
    border-right: 1px solid #eee;
    padding: 5px 6px;
}
.table-list-item-row{
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    padding: 5px 6px;
    color: #666;
    border-right: 1px solid #eee;
}
.row-checkbox{
    width: 50px;
    border-left: 1px solid #eee;
}
.row-img{
    width: 50px;
}
.row-concentration{
    width: 50px;
}
.row-angle{
    width: 100px;
}
.row-operation{
   flex: 1;
}

.table-list-item-content{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-size: 14px;
    color: #666;
}
.table-list-item-drawer{
    height: 300px;
    width: 100%;
}
.table-list-item-content-info{
    font-size: 12px;
    color: #999;
}
.table-list-item-content-img{
    width: 40px;
    height: 40px;
}