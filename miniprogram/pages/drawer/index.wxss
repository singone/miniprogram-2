/* pages/drawer/index.wxss */
page{
    display: flex;
    flex-direction: column;
}
.canvas-container{
    flex: 1;
    display: flex;
    position: relative;
    flex-direction: column;
}
.canvas-arrow_container{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
.canvas-arrow_left{
    position: absolute;
    top: 20%;
    left: 10px;
    width: 40px;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10;
}
.canvas-arrow-text{
    width: 100%;
    height: 100%;
}
.canvas-arrow_right{
    position: absolute;
    top: 20%;
    right: 10px;
    width: 40px;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.canvas{
    position: relative;
    flex: 1;
    border-bottom: 1px solid #eee;
}
.slider-content_scroll{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    overflow-x: auto;
    width: 0;
    flex: 1;
    position: relative;
}
.img-item{
    border: 2px solid transparent;
    width: 45px;
    height: 45px;
    margin-left: 12px;
    margin-top: 12px;
    box-sizing: border-box;
    position: relative;
    border-radius: 10px;
}
.img-item.selected{
    border-color: var(--drawer-color-primary);
}

.img-add-item{
    width: 45px;
    height: 45px;
    background-color: #EBEDF0;
    border-radius: 10px;
    margin-left: 12px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 60rpx;
    margin-top: 12px;
}
.img-add{
    width: 20px;
    height: 20px;
}
.img-selected{
    position: absolute;
    bottom: 0;
    left: -1px;
    width: 16px;
    height: 12px;
    border-bottom-left-radius: 10px;
}
.img-clear{
    position: absolute;
    top: -6px;
    right: -6px;
    padding: 3px;
    font-size: 10px;
    color: #000;
    background-color: #EBEDF0;
    border-radius: 50%;
}
.img{
    width: 100%;
    height: 100%;
    border-radius: 8px;
}
.scroll{
    border-bottom: 1px solid #eee;
    display: flex;
    padding: 0 10px;
}
.footer{
    display: flex;
    padding: 20px 12px;
}
.footer_left{
    flex: 1;
    width: 0;
}
.footer_right{
    display: flex;
    flex: 1;
    width: 0;
    margin-left: 12px;
}
.footer_left .btn,
.footer_right .btn{
    width: 100%;
    flex: 1;
}
.footer_left .van-button,
.footer_right .van-button{
    width: 100%;
}
.content{
    flex: 1;
}

.select-type{
    width: 100%;
    z-index: 1;
}
.test-info{
    font-size: 24rpx;
    color: #666;
    margin: 0 10px;
    display: flex;
    justify-content: space-between;
}
.test-select-type.select-type{
    bottom: 200rpx;
}
.test-value{
    color: var(--drawer-color-primary);
}
.select-type-item{
    display: flex;
    height: 100rpx;
    padding: 0 10px;
}
.select-type-item-text{
    margin: 5px;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 24rpx;
    justify-content: center;
    font-weight: 600;
}
.select-type-item-text.selected{
    color: var(--drawer-color-primary);
}
.select-type-item-img{
    width: 24px;
    height: 24px;
}
.value-container{
    display: flex;
    align-items: center;
    padding: 14px 20px;
    background-color: #eee;
    font-size: 16px;
    color: #333;
    border-radius: 10px;
    margin: 12px 12px 0;
    border: 1px solid #e1e1e1;
}
.test-value-container{
    padding: 14px 20px;
    flex-direction: column;
    font-size: 12px;
}
.slider-container{
    display: flex;
    align-items: center;
    padding: 20px 12px;
}
.slider-left-container{
    display: flex;
    justify-content: flex-start;
    flex: 1;
}
.slider-right-container{
    flex: 1;
    display: flex;
    justify-content: flex-end;
}
.slider-arrow{
    margin: 0 4px;
    padding: 6px;
    color: #333;
    background-color: #eee;
    border-radius: 10px;
    width: 30px;
    height: 30px;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
}
.slider-arrow-more .van-icon{
    width: 10px;
    margin: 0 -2px;
    padding-left: 0;
}
.slider-arrow-more .first-icon{
    margin-left: -4px;
}
.slider-content{
    flex: 1;
    display: flex;
    align-items: center;
    position: relative;
    padding-bottom: 10px;
}
.slider-content_scroll{
    flex: 1;
}

.slider-item-space{
    width: 40vw;
    height: 20px;
    min-width: 50%;
}
.slider-item{
    width: 6px;
    height: 20px;
    min-width: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.slider-item-value{
    width: 1px;
    height: 10px;
    background-color: #eaecef;
}
.slider-item-value.slider-item-value-total{
    background-color: #858a92;
    height: 14px;
}
.slider-item-selected{
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 2px;
    height: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.slider-item-selected-value{
    width: 2px;
    height: 20px;
    background-color: #191A1D;
}
.slider-item-selected-value-text{
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    font-size: 10px;
    color: #999;
}
.slider-value{
    width: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20px;
    color: #333;
}

    